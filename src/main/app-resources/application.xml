<?xml version="1.0" encoding="UTF-8"?>
<application id="snap_s1_ifg_overall">
  <jobTemplates>
    <jobTemplate id="snap_s1_ifg_input_splitting">
      <streamingExecutable>/application/snap_s1_ifg_input_splitting/run.sh</streamingExecutable>
      <defaultParameters>
         <parameter id="slave" title="Slave product reference" abstract="Define the slave product reference to be processed with SNAP" scope="runtime" maxOccurs="1">https://data2.terradue.com/eop/scihub/dataset/search?uid=S1A_IW_SLC__1SDV_20160216T051846_20160216T051914_009967_00EA4B_E31C</parameter>
         <parameter id="subswath" title="Product subswath" abstract="Define the subswath of the product to be processed with SNAP" scope="runtime" maxOccurs="1">
	         <options>
        	         <option>IW1</option>
                         <option>IW2</option>
                         <option>IW3</option>
                         <option>IW1,IW2</option>
                         <option>IW2,IW3</option>
                         <option>IW1,IW2,IW3</option>
                         <default>IW1</default>
                 </options>
         </parameter>
	 <parameter id="polarisation" title="Product polarisation" abstract="Define the product polarisation" scope="runtime" maxOccurs="1">
	 	<options>
			<option>VV</option>
			<option>VH</option>
			<option>HH</option>
			<option>HV</option>
			<default>VV</default>
		</options>
	 </parameter>
      </defaultParameters>
      <defaultJobconf>      	
        <property id="ciop.job.max.tasks">1</property>
        <property id="mapred.task.timeout">9900000000</property>
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="snap_s1_ifg_core">
      <streamingExecutable>/application/snap_s1_ifg_core/run.sh</streamingExecutable>
      <defaultParameters>
         <parameter id="orbittype" title="Orbit type" abstract="Define the orbit source for the Orbit Correction" scope="runtime" maxOccurs="1">
                <options>
                        <option>Sentinel Precise (Auto Download)</option>
                        <option>Sentinel Restituted (Auto Download)</option>
                        <default>Sentinel Restituted (Auto Download)</default>
                </options>
         </parameter>
         <parameter id="cohWinAz" title="Azimuth coherence window size" abstract="Define the coherence estimation azimuth window size for the Interferogram processing [integer number of pixels]" scope="runtime" maxOccurs="1">6</parameter>
         <parameter id="cohWinRg" title="Range coherence window size" abstract="Define the coherence estimation range window size for the Interferogram processing [integer number of pixels]" scope="runtime" maxOccurs="1">20</parameter>
         <parameter id="demtype" title="DEM type" abstract="Define the DEM source for the Back-Geocoding Coregistration, Topographic Phase Removal and Terrain Correction processings" scope="test" maxOccurs="1">
		<options>
                        <option>SRTM 3Sec</option>
			<option>SRTM 1Sec HGT</option>
                        <!-- <option>GETASSE30</option>
                        <option>ACE30</option>
                        <option>ACE2_5Min</option> -->
			<default>SRTM 3Sec</default>
                </options>
         </parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="ciop.job.max.tasks">1</property> 
        <property id="mapred.task.timeout">9900000000</property>
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="snap_s1_ifg_merge_filter">
      <streamingExecutable>/application/snap_s1_ifg_merge_filter/run.sh</streamingExecutable>
      <defaultParameters>
         <parameter id="nLooks" title="Multilook factor" abstract="Define the multilook factor applied for both Azimuth and Range directions in the Multilooking processing [integer]" scope="runtime" maxOccurs="1">2</parameter>
         <parameter id="pixelSpacingInMeter" title="Pixel spacing in meters" abstract="Define the pixel spacing for the Terrain-Correction processing [meters]" scope="runtime" maxOccurs="1">15.0</parameter>
         <parameter id="demtype" title="DEM type" abstract="Define the DEM source for the Back-Geocoding Coregistration, Topographic Phase Removal and Terrain Correction processings" scope="test" maxOccurs="1">
                <options>
                        <option>SRTM 3Sec</option>
                        <option>SRTM 1Sec HGT</option>
                        <!-- <option>GETASSE30</option>
                        <option>ACE30</option>
                        <option>ACE2_5Min</option> -->
                        <default>SRTM 3Sec</default>
                </options>
         </parameter>
         <parameter id="mapProjection" title="Map projection" abstract="Define the Map Projection for the Terrain Correction processing" scope="test" maxOccurs="1">
                <options>
                        <option>WGS84(DD)</option>
                        <option>UTM / WGS84 (Automatic)</option>
                        <default>WGS84(DD)</default>
                </options>
         </parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="ciop.job.max.tasks">1</property>
        <property id="mapred.task.timeout">9900000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="snap-s1-ifg-overall" title="SNAP S1 Interferometric processor" abstract="SNAP is a common architecture for all Sentinel Toolboxes, which is ideal for Earth Observation processing and analysis. This service provides the interferometric processor for the Sentinel-1 data performed through SNAP.">
    <workflowVersion>1.0</workflowVersion>
    <node id="node_snap_s1_ifg_input_splitting">
      <job id="snap_s1_ifg_input_splitting" />
      <sources>
        <source id="master" title="Master product reference" abstract="Define the master product reference to be processed with SNAP" scope="runtime" refid="string:list" maxOccurs="1">https://data2.terradue.com/eop/scihub/dataset/search?uid=S1A_IW_SLC__1SDV_20160123T051846_20160123T051914_009617_00E01B_3EC0</source>
      </sources>
      <parameters/>
    </node>
    <node id="node_snap_s1_ifg_core">
      <job id="snap_s1_ifg_core" />
      <sources>
        <source refid="wf:node">node_snap_s1_ifg_input_splitting</source>
      </sources>
      <parameters/>
    </node>
    <node id="node_snap_s1_ifg_merge_filter">
      <job id="snap_s1_ifg_merge_filter" />
      <sources>
        <source refid="wf:node">node_snap_s1_ifg_core</source>
      </sources>
      <parameters/>
    </node>
  </workflow>
</application>
